FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["src/Services/Compte/Compte.Api/Compte.Api.csproj", "src/Services/Compte/Compte.Api/"]
RUN dotnet restore "src/Services/Compte/Compte.Api/Compte.Api.csproj"
COPY . .
WORKDIR "/src/src/Services/Compte/Compte.Api"
RUN dotnet build "Compte.Api.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "Compte.Api.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Compte.Api.dll"]
